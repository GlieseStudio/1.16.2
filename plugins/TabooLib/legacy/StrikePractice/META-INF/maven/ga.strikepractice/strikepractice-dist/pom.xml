<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ga.strikepractice</groupId>
    <artifactId>strikepractice-dist</artifactId>
    <version>${project.parent.version}</version>
    <packaging>jar</packaging>
    <parent>
        <groupId>ga.strikepractice</groupId>
        <artifactId>strikepractice-parent</artifactId>
        <version>3.3.0</version>
    </parent>
    <build>
        <directory>../target</directory>
        <finalName>strikepractice-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>*</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_7_R4</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_8_R3</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_9_R2</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_12_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_13_R2</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_14_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_15_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>ga.strikepractice</groupId>
            <artifactId>strikepractice-nms_1_16_R3</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
    </dependencies>
</project>